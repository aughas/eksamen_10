---
const {data} = Astro.props;
import Card from "../components/Card.astro";

---

<a href={`artist/${data.slug}`}>
<article>
    <Card header={data.name} text={data.country}>
    <img src=`https://udntugbxmijixyecsglu.supabase.co/storage/v1/object/public/hero_imgs/${data.image}` alt="">
    <!-- <h1>{data.name}</h1> -->
</Card>
</article>
</a>


<style>

    img {
    display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  cursor: pointer;
    }
    img:hover{
        opacity: 50%;
    }
</style>