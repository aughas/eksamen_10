---
import "../../styles/style.css"
import MainLayout from "../../layout/Mainlayout.astro"
export async function getStaticPaths() {
  const data = await fetch("https://udntugbxmijixyecsglu.supabase.co/rest/v1/eksamen_10?order=order.asc",
  {
	method:"GET",
	headers: {
		apikey:"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InVkbnR1Z2J4bWlqaXh5ZWNzZ2x1Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3MTQ3Mzk5MTcsImV4cCI6MjAzMDMxNTkxN30.F2LbcCGrABehU4gaujhAuDCpNl9dgBtoTZezpERrH8A"
	}
  }
  ).then(response => response.json());

  return data.map((artist) => {
    return {
      params: { slug: artist.slug },
      props: { myData:artist },
    };
  });
}
const { myData } = Astro.props;

---

<MainLayout title={ myData.name }>
    <div class="grid">
        <div class="singleHero">
        <img src = `https://udntugbxmijixyecsglu.supabase.co/storage/v1/object/public/hero_imgs/${myData.image}`;>
        <h2 class="artistName">{myData.name}</h2>
        </div>
    <p class="desc">{myData.about}</p>
    <div class="info">
        <p>EXPLORE ON</p>
        <a href={myData.spotify}>
            <img id="sp" src="../../img/spotify.svg" alt="spotify">
        </a>
        <a href={myData.insta}>
            <img id="yt" src="../../img/yt.svg" alt="youtube">
        </a>
    </div>
    </MainLayout>

    <style>

.singleHero{
            width: 100%;
            height: 200px;
        }
        .singleHero img{
         width: 100%;
         height: 200px;
         object-fit: cover;
        }
        .artistName{
            position: absolute;
            top: 11.6rem;
            mix-blend-mode: exclusion;
        font-style: italic;
        }
        .info{
            margin-left: auto;
            margin-right: auto;
            align-items: center;
            text-align: center;
            font-weight: bold;
            /* display: flex; */
        }
        .desc{
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            margin: 50px 50px 30px 50px;
        }
@media (min-width: 650px){
        .singleHero{
            grid-column: 1/3;
            grid-row: 1/2;
            width: 924px;
            height: 400px;
            margin-left: auto;
            margin-right: auto;
            position: relative;
        }
        .singleHero img{
         width: 924px;
         height: 400px;
        }
        .list{
            grid-column: 1/2;
            grid-row: 2/3;
            margin-top: 80px;
        }
        .info{
            grid-column: 2/3;
            grid-row: 2/3;
            margin-left: 200px;
            text-align: end;
        }
        .desc{
            margin-top: 30px;
            margin-left: 100px;
            text-align: left;
        }
    


        .grid{
            margin-left: auto;
            margin-right: auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
        }

        .artistName{
            padding: 0.2rem;
        padding-right: 2rem;
        position: absolute;
        top: 22.5rem;

        }
    }
    </style>