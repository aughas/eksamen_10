  flex-direction: row;
  gap: 27px;
  padding: 30px 0 50px 20px;
}
textarea{
    width: 767px;
    height: 144px;
}
.managementet{
  margin: 10px 100px 10px 100px;
  padding: 50px;
  background-color: #21314A;
}
 }
 @media (min-width: 1040px){
 .managementet{
