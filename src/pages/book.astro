        text-align: center;
        margin-bottom: 47px;
    }
    
    .p_footer{
        margin-bottom: 12px;
    }
    .img_nav{
        padding: 5px;
    }
    
    
    .header{
        display: flex;
        justify-content: space-between;
    }
    .ikoner{
        display: none;
        z-index: 11;
    }
    @media (min-width: 500px){
    img{
    padding: 5px;
}

    .ikoner{
    display: flex;
    flex-direction: row;
    position: absolute;
    right: 10px;
    top: 10px;
}
#ig:hover{
    content: url("/img/ig_hov.svg");
}
#fb:hover{
    content: url("/img/fb_hov.svg");
}
#sp:hover{
    content: url("/img/spotify_hov.svg");
}
#yt:hover{
    content: url("/img/yt_hov.svg");
}

img{
    padding: 3.5px;
height: 40px;
}
}

@media (min-width: 1050px){
