<style>
  .demo{
    color: var(--accent_col);
    text-align: center;
    padding-top: 10px
  }
  .besked{
    text-align: center;

  }
  .webf{
            scale: .8; opacity: 0;
            animation: fade-in linear forwards;
            animation-timeline: view();
            animation-range: 100px 300px;
        }
        @keyframes fade-in {
            to{scale: 1; opacity: 1;}
        }
    textarea{
        width: 260px;
        height: 140px;
        color: rgb(106, 103, 103);
        padding: 5px;
        font-size: 15px;
        background-color: var(--lysgrå_col);
    }
    section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20px 0 10px;
  }
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 50px;
    margin-top: 20px
}
.text{
  display: flex;
  flex-direction: column;
}

input[type=text]{
  width: 243px;
  height: 43px;
  color: rgb(106, 103, 103);
  background-color: var(--lysgrå_col);
  border: none;
  border-radius: 1.5px;
  font-size: 15px;
  padding-left: 10px;
}
input[type=submit] {
  width: 100px;
    height: 37px;
    font-size: 15px;   
    text-transform: uppercase; 
    color: var(--background_col);
    cursor: pointer;
    font-weight: bold;
    border: none;
    border-radius: 1px;
}
.checkbox{
padding-bottom: 20px;
}
h4{
  font-size: 15px;
  padding-left: 8px;
}
.managementet{
  margin: 10px;
  padding: 20px;
  background-color: #21314A;
}
@media (min-width: 650px){
.gang{
  display: flex;
  justify-content: center;
}
.gang img{
  width: 750px;
}
h4{
  font-size: 20px;
}

input[type=text]{
  width: 350px;
  height: 57px;
  font-size: 27px;
}
input[type=submit] {
  width: 220px;
      height: 69px;
      font-size: 25px;
    color: var(--background_col);
    cursor: pointer;
    font-weight: bold;
    transition: width 0.3s ease, height 0.3s ease, font-size 0.3s ease;
}

input[type=submit]:hover{
  width: 256px;
      height: 79px;
      font-size: 29px;
    }
    textarea{
